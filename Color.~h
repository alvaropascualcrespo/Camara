//---------------------------------------------------------------------------

#ifndef ColorH
#define ColorH

#include <gl\gl.h>
//---------------------------------------------------------------------------
class Color{
        private:
                GLfloat r;
                GLfloat g;
                GLfloat b;

        public:
                Color(GLfloat red, GLfloat green, GLfloat blue){r = red; g = green; b = blue;};
};

#endif
 